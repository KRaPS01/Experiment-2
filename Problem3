#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

int main () 
{	
	int x;
	float a,V,z,y;
	cout<<"Enter 2 integers!\nx = ";
	cin>> x;
	z=2.5;
	switch (x)
	{
		case 1:
		{
			(x==1);
			cout<<"y = ";
			cin>> y;
			if (y>=1 && y<5)
			{
				V = y*z;
				cout<< setw (10);
				cout<< fixed << setprecision(2) << V;
			}
			else if (y>=5)
			{
				V = 1 + (y/z);
				cout<< setw (10);
				cout<< fixed << setprecision(2) <<  V;
			}
			else
				cout<<"Invalid Input!";
		break;
		}
		case 2:
		{
			(x==2);
			cout<<"y = ";
			cin>> y;
			if (y<=5)
			{
				V = (2-y)/z;
				if (V<0)
				{
					a=V*-1;
					cout<< setw (10);
					cout<< fixed << setprecision(2) <<  a;
				}
				else
				{
					cout<< setw (10);
					cout<< fixed << setprecision(2) <<  V;
				}
			}
			else if (y>5)
			{
				V = 2 - (sqrt(y)) + z;			
				cout<< setw (10);
				cout<< fixed << setprecision(2) <<  V;
			}
			else
				cout<<"Invalid Input!";
		break;
		}
		default :
		{	
			cout<<"y = ";
			cin>> y;
			V = x + y + z;
			cout<< setw (10);
			cout<< fixed << setprecision(2) <<  V;
		}
	}

  return 0;
}
