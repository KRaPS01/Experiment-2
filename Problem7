#include <iostream>
using namespace std;
int main()
{
    int a,b,c; 

	do
	{
	
		cout << "\nEnter a number: ";
    	cin >> a;
    	 
    	c+=a;	
    	 
	    if (a>0)
	    {
	    	c=0;
	    	for (b=1;b<=a;b++)
   			 {
        		c+=b;
  		     }

		cout << "The sum of all whole numbers from 1 to "<< a <<" is "<< c<<"\n";
			
		}
		else if (a<=0) 
			{
			
			c=0;
			cout<<"Thank you!.";
			}
					 
	}while (a>0);   
	    
    return 0;
}
