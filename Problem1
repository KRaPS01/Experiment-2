#include <iostream>
using namespace std;
int main()
{
	int a,b,c;
	
	 cout <<"1. Package A.\n";
	 cout <<"2. Package B.\n";
	 cout <<"3. Package C.\n";
	 cout <<"Enter your package (1-3):\n";
	 cin>>a;
	 cout<<"Enter number of hours used.\n";
	 cin>>b;
	 
	 switch(a)
	 {
	 	case 1:
	 		if (b>10)
	 		c= 995 + (b-10)*20;
	 		cout<<"Your total amount due is "<<c<<"\n";
	 		break;
	 		
	 	case 2:
	 		if (b>20)
	 		c= 1495 + (b-20)*10;
	 		cout<<"Your total amount due is "<<c<<"\n";
	 		break;
	 		
	 	case 3:
	 		c= 1995;
	 		cout<<"Your total amount due is "<<c<<"\n";
	 		break;	 	
	 }
	 
	return 0;
}
